<!doctype html>
<html>
<head>
<title>Login</title>
<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
<style>
  body        { padding-top:80px; }
</style>
<style>
  body {
    background-image:url("http://www.freebiesgallery.com/wp-content/uploads/2013/08/light-blue-background.jpg");
    background-repeat: no-repeat;
    background-size: cover;
  }
</style>
</head>
<body>
<div class = "container" align = "center">
  <h1><span class="fa fa-sign-in"></span> Login</h1>
  <style>
    h1 {
      font-size: 5em;
    }
  </style>
</div>
<div class="container">
  <div class="col-sm-6 col-sm-offset-3">

    <!-- show any messages that come back with authentication -->
    <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <!-- LOGIN FORM -->
  <form action="/login" method="post">
      <div class="form-group">
        <label>EMAIL:</label>
        <input type="text" placeholder="johndoe@example.com" class="form-control" name="email">
        <br>

        <label>PASSWORD:</label>
        <input type="password" placeholder="******" class="form-control" name="password">
        <br>
      </div>

    <p align = "right">
    <button type="submit" class="btn btn-warning btn-lg">Login</button>
  </p>
    </form>
    <hr>
    <br>
    <p style="font-size:100%;"" align = "right">NEED AN ACCOUNT <a href="/signup">SIGNUP HERE</a>!</p>
    <p style="font-size:100%;" align = "right">REDIRECT TO <a href="/">HOME</a>.</p>
  </div>
  </div>
</div>
</body>
</html>
