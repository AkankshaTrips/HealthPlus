                    <%counter=counter+1;  } %>
                  <% } %>
                </tbody>
              </table>
            </div>
          </div>


          <div class="child" id="Gastroenterologist" class="row">
              <h4>Gastroenterologist</h4>
              <div class ="col-xs-12 col-md-6">
                <table class= "table table-bordered" id="hiddentable" >
                  <thead>
                    <tr>
                      <th>Reports</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% var counter = 0;
                    for (var i = 0; i < report.length; i++) {
                      console.log(report[i].specialization);
                        if (report[i].specialization == "Gastroenterologist") { %>
                          <a  href="/patientReport/" onclick="location.href=this.href+ <%= user.local.userID%>+'/'+ <%= i%>;return false;" class="list-group-item list-group-item-action">Report <%- counter+1 %> </a>
                          <a  href="/patientReportDel/" onclick="location.href=this.href+ <%= user.local.userID%>+'/'+ <%= i%>;return false;" class="btn btn-sm"><font color="red"><span class="glyphicon glyphicon-trash"></span>Delete </a></font>

                      <%counter=counter+1;  } %>
                    <% } %>
                  </tbody>
                </table>
              </div>
            </div>






</div>

