  <div class="container">
      <h1 style = "font-family:lato", align = "center"><b>PATIENT FORM</b></h1>
  </div>

<div class="container">
	<form action="/doctorReport" method="post">

 <div class="form-group">
	<div class = "row">
	<div class = "col-sm-4">
 	<label>NAME:</label>
 	<input type="text" name="firstName" placeholder = "First" class="form-control">
	</div>

 	<div class = "col-sm-4">
	<label> <br> </label>
	<input type="text" name="lastName" placeholder="Last" class="form-control">
	</div>

	<div class = "col-sm-4">
 	<label>PATIENT ID:</label>
 	<input type="text" name="patientID" placeholder="6 digit pin" class="form-control"> <br> <br>
	</div>
	</div>

	<div class = "row">
	<div class = "col-sm-4">
	<label>AGE:</label>
	<div class="input-group">
 	<input type="text" name="age" class="form-control" aria-describedby="age">
  	<span class="input-group-addon" name="age">years</span>
	</div>
	</div>

	<div class = "col-sm-4">
	<label>HEIGHT:</label>
	<div class="input-group">
 	<input type="text" name="height" class="form-control" aria-describedby="height">
  	<span class="input-group-addon" name="height">feet</span>
	</div>
	</div>

	<div class = "col-sm-4">
	<label>WEIGHT:</label>
	<div class="input-group">
 	<input type="text" name="weight" class="form-control"aria-describedby="weight">
  	<span class="input-group-addon" name="weight">kilograms</span>
	</div>
	<br> <br>
	</div>
	</div>

	<div class = "rows">
	<div class = "col-md-6">
	<label>SYMPTOMS:</label>
 	<textarea placeholder="Enter the signs shown" rows = "10" name="symptoms" class="form-control"></textarea>
	</div>

	<div class = "col-md-6">
	<label>DIAGNOSIS:</label>
 	<textarea type="text" name="diagnosis" placeholder="Enter the ailment" rows = "10" class="form-control"></textarea> <br> <br>
	</div>
	</div>

	<label>MEDICATION:</label>
 	<textarea type="text" name="medicines" placeholder="Enter the prescribed medication required along with the dosage" rows = "7" class="form-control"></textarea> <br> <br>

	<div class = "row">
	<div class = "col-sm-4">
  	<label>SPECIALIZATION:</label>
        <select class="form-control" name="specialization">
        <option value="Cardiologist">Cardiologist</option>
        <option value="Dentist">Dentist</option>
        <option value="Neurologist">Neurologist</option>
        <option value="ENT_Specialist">ENT Specialist</option>
        <option value="Gastroenterologist">Gastroenterologist</option>
        </select>
        </div>

	<div class = "col-sm-4">
	<label>SIGNATURE:</label>
 	<input type="text" placeholder = "Type full name" class="form-control">
	</div>

	<div class = "col-sm-4">
	<label>DATE:</label>
 	<input type="text" placeholder="mm/dd/yyyy" class="form-control"> <br> <br>
	</div>
	</div>

	<div class = "row">
	<div class = "col-lg-9">
	</div>

	<div class = "col-lg-3">
	<button type="submit" class="btn btn-warning btn-lg" >SUBMIT</button>
	</div>
 </div>
